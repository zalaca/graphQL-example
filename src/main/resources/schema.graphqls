type Product {
    id: ID
    name: String
    price: Float
    active: Boolean
}

type Site {
    id: ID
    description: String
}

type Query {
    getAllProducts: [Product],
    getAllProductsFilteredByActive(isActive: Boolean): [Product],
    getProductById(id: ID!): Product,
    getAllSites: [Site],
    getSiteById(id: ID!): Site
}



